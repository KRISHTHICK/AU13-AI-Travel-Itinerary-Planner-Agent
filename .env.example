# LLM (pick one)
PROVIDER=openai           # openai | ollama | none
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini  # or gpt-4o, gpt-4.1, gpt-3.5-turbo, etc.

# If using Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b-instruct

# Data APIs (optional; Demo mode works without these)
OPENWEATHER_API_KEY=
OPENTRIPMAP_API_KEY=
TICKETMASTER_API_KEY=

# Optional: map thumbnails (Google Static Maps)
GOOGLE_MAPS_STATIC_API_KEY=
